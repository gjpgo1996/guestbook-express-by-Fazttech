<% include partials/header%>

<div class="col-xs-8 col-xs-offset-2">
  <h2 class="text-center">AGREGA TAREAS</h2>

  <form method="post" role="form">

    <div class="form-group">
      <label for="title">Título de la tarea</label>
      <input name="title" id="title" type="text" class="form-control"  placeholder="Ingresa un nuevo título" required>
    </div>

    <div class="form-group">
      <label for="body">Describe tarea</label>
      <textarea
        class="form-control"
        id="body"
        name="body"
        rows="3"
        required>
        </textarea>
    </div>

    <div class="form-group">
      <input type="submit" value="Post Entry" class="btn btn-primary">
    </div>
  </form>
</div>

<% include partials/footer%>
